// Creates an image that is 480 x 240 pixels
W := 480
H := 240
screensize(W, H)

// Clear the image with the white color
pencolor("#808080")
clear()

// Sets the pen size 
pensize(1)

i := 0
while(i < height()) {
    pencolor("#81ce0f")
    rectangle(0, i, width(), 10)
    fill()

    pencolor("#ffffff")
    rectangle(i, 0, 10, height())
    fill()
    
    i = i + 20
}

// save the image
snapshot("./examples/rectangles.png")